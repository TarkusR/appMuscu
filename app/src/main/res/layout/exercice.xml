            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="52dp"
            android:layout_height="65dp"
            android:layout_marginEnd="160dp"
            android:scaleX="2.5"
            android:scaleY="2.5"
